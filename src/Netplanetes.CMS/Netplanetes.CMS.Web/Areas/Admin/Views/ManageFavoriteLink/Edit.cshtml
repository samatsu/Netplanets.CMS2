@model Netplanetes.CMS.Web.Areas.Admin.Models.EditFavoriteLinkViewModel

@{
    ViewBag.Title = "お気に入りリンク編集 -" + Model.Text;
    string msg = "更新";
    if (Model.FavoriteLinkID == 0)
    {
        msg = "作成";
    }
}

<article>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(x => x.FavoriteLinkID, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10 ">
                @Html.TextBoxFor(x => x.FavoriteLinkID, new { @class = "form-control", disabled = "disabled" })
                @Html.HiddenFor(x => x.FavoriteLinkID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Text, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Text, "", new { @class = "control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Url, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10 ">
                @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Url, "", new { @class = "control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.SortOrder, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10 ">
                @Html.TextBoxFor(x => x.SortOrder, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(x => x.SortOrder, "", new { @class = "control-label" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" title="@msg" value="@msg" />
                <input type="reset" class="btn btn-default" value="リセット" />
            </div>
        </div>
    }
</article>
